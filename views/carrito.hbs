<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">


<div class="rows">
      <div class="col-md-8 cart">
        <div class="title">
          <h4>
            <b>Carrito de compras</b>
          </h4>
        </div>
        <div class="border-top border-bottom">
            {{#each productsInCart}}
                  <div class="rows main align-items-center">
                    <div class="col-2">
                      <img class="img-fluid" src={{this.imgUrl}} alt={{this.name}} />
                    </div>
                    <div class="col">
                      <div class="rows text-muted">{{this.name}}</div>
                      <div class="rows">{{this.description}}</div>
                    </div>
                    <div class="col">
                      <span class="border">Cantidad: {{this.stock}}</span>
                    </div>
                    <div class="col">
                      ${{this.price}}
                      <button class="btn-dark" onClick={remove}>
                        X
                      </button>
                    </div>
                  </div>
                  {{/each}}
                </div>
              
            
            <button class="btn" onClick={eraseCart}>
              Vaciar carrito
            </button>
      </div>
    </div>